EXTRA_CFLAGS = @CFLAGS@

modname = bdtun
koname = $(modname).ko
obj-m := $(modname).o
KDIR := /lib/modules/$(shell uname -r)/build
PWD := $(shell pwd)

all: module

module:
	$(MAKE) -C $(KDIR) M=$(PWD) modules

install: module
	$(MAKE) -C $(KDIR) M=$(PWD) modules_install
	depmod -a

uninstall:
	rm -f $(KDIR)/extra/$(koname)
	depmod -a

distclean: clean

clean:
	$(MAKE) -C $(KDIR) M=$(PWD) clean
